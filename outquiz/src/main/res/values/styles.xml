<resources>

    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/navbar.background</item>
        <item name="android:colorPrimaryDark">@color/navbar.background</item>
        <item name="android:colorBackground">@color/system.background</item>
        <item name="android:colorAccent">@color/navbar.background</item>
        <item name="android:textColor">@color/system.text</item>
    </style>

    <style name="AppTheme.Normal" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorPrimaryDark">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:colorForeground">@color/text</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:colorAccent">@color/navbar.background</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Normal.Dialog</item>
    </style>

    <style name="AppTheme.Normal.Dialog" parent="android:Theme.Material.Light.Dialog">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="AppTheme.Button" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/system.button.background</item>
        <item name="android:textColor">@color/system.button.text</item>
        <item name="android:padding">16dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="AppTheme.Button.Watch" parent="AppTheme.Button">
        <item name="android:background">@color/home.watch.background</item>
        <item name="android:textColor">@color/home.watch.text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Button.Lives" parent="AppTheme.Button">
        <item name="android:background">@color/text</item>
        <item name="android:textColor">@color/background</item>
    </style>

    <style name="AppTheme.Button.Share" parent="AppTheme.Button.Lives">
        <item name="android:background">@color/winners.share.background</item>
        <item name="android:textColor">@color/winners.share.text</item>
    </style>

    <style name="AppTheme.Button.Login" parent="AppTheme.Button">
        <item name="android:background">@color/login.button.background</item>
        <item name="android:textColor">@color/login.button.text</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="AppTheme.Button.Leaderboard" parent="android:Widget.Material.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/leaderboard_button_bcg_dw</item>
        <item name="android:textColor">@drawable/leaderboard_button_text_dw</item>
        <item name="android:padding">8dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:strokeColor">@color/text</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="AppTheme.Slogan" parent="android:Widget.TextView">
        <item name="android:textSize">22dp</item>
    </style>

    <style name="AppTheme.Field" parent="android:Widget">
        <item name="android:background">@color/system.background</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/system.text</item>
    </style>

    <style name="AppTheme.Field.Show" parent="android:Widget">
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
