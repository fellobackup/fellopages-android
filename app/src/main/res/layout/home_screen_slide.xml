<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/slide_title"
            android:text="@string/first_slide_title"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/desc_padding"
            android:paddingRight="@dimen/desc_padding"
            android:paddingStart="@dimen/desc_padding"
            android:paddingEnd="@dimen/desc_padding"
            android:textSize="@dimen/title_large_font_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/slide_description"
            android:layout_below="@+id/slide_title"
            android:layout_marginTop="30dp"
            android:paddingLeft="@dimen/desc_padding"
            android:paddingRight="@dimen/desc_padding"
            android:paddingStart="@dimen/desc_padding"
            android:paddingEnd="@dimen/desc_padding"
            android:text="@string/first_slide_subtitle"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="@dimen/slide_desc" />

        <ImageView
            android:layout_width="@dimen/img_width_height"
            android:layout_height="@dimen/img_width_height"
            android:layout_below="@+id/slide_description"
            android:layout_marginTop="@dimen/margin_50dp"
            android:layout_centerInParent="true"
            android:id="@+id/slide_icon"
            android:src="@drawable/slide_screen_1" />

    </RelativeLayout>

</RelativeLayout>

