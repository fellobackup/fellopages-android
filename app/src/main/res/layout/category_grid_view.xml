<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/card_view_elevation">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/viewImage"
            android:layout_centerInParent="true"
            android:layout_height="@dimen/category_grid_view_height"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/category_grid_view_height"
            android:id="@+id/gradient_view"
            android:textSize="@dimen/body_default_font_size"
            android:visibility="visible"
            android:background="@drawable/full_screen_gradient_overlay"/>
        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TitleLargeView"
            android:textColor="@color/white"
            android:layout_margin="@dimen/margin_10dp"
            android:shadowColor="@color/dark_gray"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:gravity="center"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/wishlistTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/body_default_font_size"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_below="@+id/viewImage"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginStart="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:layout_marginEnd="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:gravity="center"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
