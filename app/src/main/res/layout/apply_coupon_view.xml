<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/apply_coupon_message"
        android:textSize="@dimen/body_default_font_size"
        android:layout_margin="@dimen/margin_15dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_15dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp">

        <EditText
            android:id="@+id/apply_coupon_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:singleLine="true"
            style="@style/BodyMediumView"
            android:paddingRight="@dimen/padding_15dp"
            android:paddingEnd="@dimen/padding_15dp"
            android:layout_margin="@dimen/margin_15dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:background="@color/transparent"
            android:hint="@string/coupon_code_hint"
            android:gravity="center"
            android:inputType="text" />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loadingProgressBar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            style="?android:attr/progressBarStyleSmall"
            android:layout_marginRight="@dimen/margin_5dp"
            android:layout_marginEnd="@dimen/margin_5dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/coupon_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/body_default_font_size"
        android:textColor="@color/red"
        android:visibility="gone"
        android:layout_margin="@dimen/margin_15dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"/>

    <TextView
        android:id="@+id/apply_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_icon_tab_height"
        android:layout_gravity="center"
        android:text="@string/filter_apply_btn"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/themeButtonColor"
        android:textSize="@dimen/body_default_font_size"
        android:textAllCaps="true"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_15dp"/>

</LinearLayout>