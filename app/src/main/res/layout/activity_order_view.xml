<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:orientation="vertical"
    tools:context="com.fellopages.mobileapp.classes.modules.store.order.OrderViewActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:layout_alignParentTop="true"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:theme="@style/ActionBarThemeOverlay"/>

    <ProgressBar
        android:theme="@style/CircularProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"
        android:layout_gravity="center"/>

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/product_info_view"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone"
                android:paddingTop="@dimen/padding_10dp"
                android:paddingBottom="@dimen/padding_10dp"
                android:layout_marginBottom="@dimen/margin_5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/order_detail_label"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:padding="@dimen/padding_10dp"
                    android:paddingStart="@dimen/padding_10dp"
                    android:paddingEnd="@dimen/padding_10dp"
                    android:textSize="@dimen/body_medium_font_size"/>
                <TableLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/store_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:layout_span="4"
                            android:textSize="@dimen/body_default_font_size"
                            android:padding="@dimen/padding_10dp"
                            android:paddingStart="@dimen/padding_10dp"
                            android:paddingEnd="@dimen/padding_10dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/total_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_span="1"
                            android:gravity="end"
                            android:textColor="@color/black"
                            android:textSize="@dimen/body_default_font_size"
                            android:padding="@dimen/padding_10dp"
                            android:paddingStart="@dimen/padding_10dp"
                            android:paddingEnd="@dimen/padding_10dp"
                            android:textStyle="bold"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="@string/tax_vat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:layout_span="4"
                            android:textSize="@dimen/caption_font_size"
                            android:paddingTop="@dimen/padding_5dp"
                            android:paddingBottom="@dimen/padding_5dp"
                            android:paddingLeft="@dimen/padding_10dp"
                            android:paddingRight="@dimen/padding_10dp"
                            android:paddingStart="@dimen/padding_10dp"
                            android:paddingEnd="@dimen/padding_10dp"
                            android:textColor="@color/dark_gray" />

                        <TextView
                            android:id="@+id/taxVatAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_span="1"
                            android:gravity="end"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/caption_font_size"
                            android:paddingTop="@dimen/padding_5dp"
                            android:paddingBottom="@dimen/padding_5dp"
                            android:paddingLeft="@dimen/padding_10dp"
                            android:paddingStart="@dimen/padding_10dp"
                            android:paddingEnd="@dimen/padding_10dp"
                            android:paddingRight="@dimen/padding_10dp" />

                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="@string/shipping_price_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:layout_span="4"
                            android:textSize="@dimen/caption_font_size"
                            android:paddingTop="@dimen/padding_5dp"
                            android:paddingBottom="@dimen/padding_5dp"
                            android:paddingLeft="@dimen/padding_10dp"
                            android:paddingRight="@dimen/padding_10dp"
                            android:paddingStart="@dimen/padding_10dp"
                            android:paddingEnd="@dimen/padding_10dp"
                            android:textColor="@color/dark_gray" />

                        <TextView
                            android:id="@+id/shipping_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_span="1"
                            android:gravity="end"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/caption_font_size"
                            android:paddingTop="@dimen/padding_5dp"
                            android:paddingBottom="@dimen/padding_5dp"
                            android:paddingLeft="@dimen/padding_10dp"
                            android:paddingRight="@dimen/padding_10dp"
                            android:paddingStart="@dimen/padding_10dp"
                            android:paddingEnd="@dimen/padding_10dp" />

                    </TableRow>
                </TableLayout>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_id"
                    android:textAllCaps="true"
                    android:textSize="@dimen/body_default_font_size"
                    android:padding="@dimen/padding_10dp"
                    android:paddingStart="@dimen/padding_10dp"
                    android:paddingEnd="@dimen/padding_10dp"
                    android:background="@color/gray_light"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/billing_info_view"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@color/white"
                android:paddingTop="@dimen/padding_10dp"
                android:paddingBottom="@dimen/padding_10dp"
                android:layout_marginBottom="@dimen/margin_5dp">

            </LinearLayout>
            <LinearLayout
                android:id="@+id/shipping_details_view"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone"
                android:paddingTop="@dimen/padding_10dp"
                android:paddingBottom="@dimen/padding_10dp"
                android:layout_marginBottom="@dimen/margin_5dp">

            </LinearLayout>
            <LinearLayout
                android:id="@+id/order_info_view"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone"
                android:paddingTop="@dimen/padding_10dp"
                android:paddingBottom="@dimen/padding_10dp"
                android:layout_marginBottom="@dimen/margin_5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/order_info_label"
                    android:textStyle="bold"
                    android:padding="@dimen/padding_10dp"
                    android:paddingStart="@dimen/padding_10dp"
                    android:paddingEnd="@dimen/padding_10dp"
                    android:textSize="@dimen/body_medium_font_size"/>
                <TextView
                    android:id="@+id/order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/padding_10dp"
                    android:paddingRight="@dimen/padding_10dp"
                    android:paddingStart="@dimen/padding_10dp"
                    android:paddingEnd="@dimen/padding_10dp"
                    android:paddingTop="@dimen/padding_5dp"
                    android:paddingBottom="@dimen/padding_5dp"
                    android:textSize="@dimen/body_default_font_size"/>
                <TextView
                    android:id="@+id/order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/padding_10dp"
                    android:paddingRight="@dimen/padding_10dp"
                    android:paddingStart="@dimen/padding_10dp"
                    android:paddingEnd="@dimen/padding_10dp"
                    android:paddingTop="@dimen/padding_5dp"
                    android:paddingBottom="@dimen/padding_5dp"
                    android:textSize="@dimen/body_default_font_size"/>
                <TextView
                    android:id="@+id/order_tax_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/padding_10dp"
                    android:paddingRight="@dimen/padding_10dp"
                    android:paddingStart="@dimen/padding_10dp"
                    android:paddingEnd="@dimen/padding_10dp"
                    android:paddingTop="@dimen/padding_5dp"
                    android:paddingBottom="@dimen/padding_5dp"
                    android:textSize="@dimen/body_default_font_size"/>
                <TextView
                    android:id="@+id/order_shipping_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/padding_10dp"
                    android:paddingRight="@dimen/padding_10dp"
                    android:paddingStart="@dimen/padding_10dp"
                    android:paddingEnd="@dimen/padding_10dp"
                    android:paddingTop="@dimen/padding_5dp"
                    android:paddingBottom="@dimen/padding_5dp"
                    android:textSize="@dimen/body_default_font_size"/>
                <TextView
                    android:id="@+id/order_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/padding_10dp"
                    android:paddingRight="@dimen/padding_10dp"
                    android:paddingStart="@dimen/padding_10dp"
                    android:paddingEnd="@dimen/padding_10dp"
                    android:paddingTop="@dimen/padding_5dp"
                    android:paddingBottom="@dimen/padding_5dp"
                    android:textSize="@dimen/body_default_font_size"/>
                <TextView
                    android:id="@+id/ip_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/padding_10dp"
                    android:paddingRight="@dimen/padding_10dp"
                    android:paddingStart="@dimen/padding_10dp"
                    android:paddingEnd="@dimen/padding_10dp"
                    android:paddingTop="@dimen/padding_5dp"
                    android:paddingBottom="@dimen/padding_5dp"
                    android:textSize="@dimen/body_default_font_size"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/payment_info_view"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone"
                android:paddingTop="@dimen/padding_10dp"
                android:paddingBottom="@dimen/padding_10dp"
                android:layout_marginBottom="@dimen/margin_5dp">

            </LinearLayout>
            <LinearLayout
                android:id="@+id/shipping_info_view"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone"
                android:paddingTop="@dimen/padding_10dp"
                android:paddingBottom="@dimen/padding_10dp"
                android:layout_marginBottom="@dimen/margin_5dp">

            </LinearLayout>
            <LinearLayout
                android:id="@+id/order_summary_info_view"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone"
                android:paddingTop="@dimen/padding_10dp"
                android:paddingBottom="@dimen/padding_10dp"
                android:layout_marginBottom="@dimen/margin_5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/order_summary_label"
                    android:textStyle="bold"
                    android:padding="@dimen/padding_10dp"
                    android:paddingStart="@dimen/padding_10dp"
                    android:paddingEnd="@dimen/padding_10dp"
                    android:textSize="@dimen/body_medium_font_size"/>

                <GridLayout
                    android:id="@+id/price_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingStart="@dimen/padding_10dp"
                    android:paddingLeft="@dimen/padding_10dp"
                    android:columnCount="2">
                </GridLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
