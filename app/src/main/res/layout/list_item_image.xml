<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:scaleType="centerInside"
        android:src="@drawable/default_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/gif_icon"
        android:layout_width="@dimen/play_button_width"
        android:layout_height="@dimen/play_button_width"
        android:layout_gravity="center"
        android:src="@drawable/gif_icon"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:visibility="gone"
        android:contentDescription="@string/image_caption" />

    <ImageView
        android:id="@+id/play_button"
        android:layout_width="@dimen/location_icon_width_height"
        android:layout_height="@dimen/location_icon_width_height"
        android:layout_gravity="center"
        android:src="@drawable/ic_play_normal"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:visibility="gone"
        android:contentDescription="@string/image_caption" />

    <View
        android:visibility="gone"
        android:id="@+id/mask"
        android:background="#88000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/checkmark"
        android:layout_gravity="top|end"
        android:layout_marginTop="@dimen/checkmark_margin"
        android:layout_marginRight="@dimen/checkmark_margin"
        android:layout_marginEnd="@dimen/checkmark_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_unselected"/>

</FrameLayout>