<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ad_unit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/card_view_elevation">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingTop="@dimen/padding_10dp"
        android:paddingBottom="@dimen/padding_10dp"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginStart="@dimen/margin_5dp"
        android:layout_marginRight="@dimen/margin_5dp"
        android:layout_marginEnd="@dimen/margin_5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/body_default_font_size"
            android:id="@+id/removeAdDescription"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_marginRight="@dimen/margin_5dp"
            android:layout_marginEnd="@dimen/margin_5dp"
            android:textSize="@dimen/body_default_font_size"
            android:padding="@dimen/padding_3dp"
            android:paddingStart="@dimen/padding_3dp"
            android:paddingEnd="@dimen/padding_3dp"
            android:text="@string/undo_text"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/undoTextView"/>

        <RadioGroup
            android:id="@+id/removeAdsOption"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/margin_5dp"
            android:textSize="@dimen/caption_font_size"
            android:hint="@string/report_edittext_hint"
            android:id="@+id/editText" />

        <com.fellopages.mobileapp.classes.common.ui.BaseButton
            android:id="@+id/report_ad_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:paddingStart="@dimen/padding_15dp"
            android:paddingTop="@dimen/padding_8dp"
            android:paddingEnd="@dimen/padding_15dp"
            android:paddingBottom="@dimen/padding_8dp"
            android:text="@string/title_activity_report_entry"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/base_button_default_corner_radius"
            app:normalStateColor="@color/themeButtonColor"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>

    </LinearLayout>
</android.support.v7.widget.CardView>