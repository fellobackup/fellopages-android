<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:layout_alignTop="@+id/photoCount"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/gif_icon"
        android:layout_width="@dimen/play_button_width"
        android:layout_height="@dimen/play_button_width"
        android:layout_centerInParent="true"
        android:src="@drawable/gif_icon"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:visibility="gone"
        android:contentDescription="@string/image_caption" />

    <com.fellopages.mobileapp.classes.common.ui.BezelImageView
        android:id="@+id/reactionIcon"
        android:layout_width="@dimen/reaction_image_width_height"
        android:layout_height="@dimen/reaction_image_width_height"
        android:layout_marginTop="@dimen/margin_3dp"
        android:layout_marginBottom="@dimen/margin_3dp"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginRight="@dimen/margin_5dp"
        android:layout_marginStart="@dimen/margin_5dp"
        android:layout_marginEnd="@dimen/margin_5dp"
        app:maskDrawable="@drawable/circle_mask"
        app:borderDrawable="@drawable/circle_border"
        android:visibility="gone" />

    <TextView
        android:id="@+id/photoCount"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/comment_post_button_size"
        android:visibility="gone" />
</RelativeLayout>