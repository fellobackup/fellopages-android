<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fellopages.mobileapp.classes.modules.user.profile.EditProfilePhotoFragment">

    <ProgressBar
        android:theme="@style/CircularProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/profileImageBlock"
        android:visibility="gone"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp">

        <com.fellopages.mobileapp.classes.common.ui.SelectableTextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/currentPhotoText"
            android:layout_marginTop="@dimen/margin_5dp"
            android:textSize="@dimen/body_default_font_size"
            android:gravity="center"
            android:text="@string/current_photo_text" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/sing_up_image_width_height"
            android:id="@+id/userProfileImage"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:src="@drawable/default_user_profile"/>

        <Button
            android:layout_width="match_parent"
            android:text="@string/save_photo"
            android:id="@+id/savePhotoButton"
            android:padding="@dimen/padding_5dp"
            android:textSize="@dimen/body_default_font_size"
            android:paddingStart="@dimen/padding_5dp"
            android:paddingEnd="@dimen/padding_5dp"
            android:visibility="gone"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:text="@string/cancel_dialogue_message"
            android:id="@+id/cancelButton"
            android:textSize="@dimen/body_default_font_size"
            android:padding="@dimen/padding_5dp"
            android:paddingStart="@dimen/padding_5dp"
            android:paddingEnd="@dimen/padding_5dp"
            android:visibility="gone"
            android:layout_height="wrap_content" />


        <Button
            android:layout_width="match_parent"
            android:text="@string/upload_image"
            android:id="@+id/uploadImageButton"
            android:textSize="@dimen/body_default_font_size"
            android:background="@color/themeButtonColor"
            android:padding="@dimen/padding_5dp"
            android:paddingStart="@dimen/padding_5dp"
            android:paddingEnd="@dimen/padding_5dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
