<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/layout_margin_padding"
    android:paddingBottom="@dimen/layout_margin_padding"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/layout_margin_padding"
        android:layout_marginStart="@dimen/layout_margin_padding"
        android:id="@+id/cover"
        tools:src="@drawable/ic_arrow_back"
        android:layout_gravity="center_vertical"
        android:scaleType="centerInside"
        android:src="@drawable/default_error"
        android:layout_width="@dimen/folder_cover_size"
        android:layout_height="@dimen/folder_cover_size" />

    <LinearLayout
        android:layout_toRightOf="@+id/cover"
        android:layout_toEndOf="@+id/cover"
        android:layout_toLeftOf="@+id/indicator"
        android:layout_toStartOf="@+id/indicator"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/layout_left_margin"
        android:layout_marginStart="@dimen/layout_left_margin"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            tools:text="img"
            android:textSize="@dimen/body_default_font_size"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/size"
            tools:text="1"
            android:layout_marginTop="@dimen/layout_top_margin"
            style="@style/CaptionView"
            android:textColor="#AFAFAF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:id="@+id/indicator"
        android:layout_marginLeft="@dimen/layout_margin_padding"
        android:layout_marginStart="@dimen/layout_margin_padding"
        android:layout_marginRight="@dimen/layout_right_margin"
        android:layout_marginEnd="@dimen/layout_right_margin"
        android:src="@drawable/default_check"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>