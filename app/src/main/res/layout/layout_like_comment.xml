<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/button_size_content_card"
        android:layout_gravity="center"
        android:id="@+id/like_view"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/reaction_icon_width_height"
            android:layout_height="@dimen/reaction_icon_width_height"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:layout_marginStart="@dimen/margin_8dp"
            android:layout_gravity="center"
            android:id="@+id/reactionIcon"/>

        <com.fellopages.mobileapp.classes.common.ui.ActionIconThemedTextView
            android:id="@+id/like_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingLeft="@dimen/element_spacing_normal"
            android:paddingStart="@dimen/element_spacing_normal"
            android:paddingRight="@dimen/element_spacing_normal"
            android:paddingEnd="@dimen/element_spacing_normal"
            android:drawablePadding="@dimen/element_spacing_normal"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceSmall"
            app:iabActivatedColor="@color/themeButtonColor"
            app:iabColor="?android:textColorTertiary"
            android:text="@string/like_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/button_size_content_card"
        android:layout_gravity="center"
        android:id="@+id/comment_view"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center">

        <com.fellopages.mobileapp.classes.common.ui.ActionIconThemedTextView
            android:id="@+id/comment_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_comment_white"
            android:drawableStart="@drawable/ic_comment_white"
            android:gravity="center"
            android:layout_gravity="center"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:paddingLeft="@dimen/element_spacing_normal"
            android:paddingStart="@dimen/element_spacing_normal"
            android:paddingRight="@dimen/element_spacing_normal"
            android:paddingEnd="@dimen/element_spacing_normal"
            android:drawablePadding="@dimen/element_spacing_normal"
            android:textAppearance="?android:textAppearanceSmall"
            app:iabActivatedColor="@color/themeButtonColor"
            app:iabColor="?android:textColorTertiary"
            android:text="@string/comment_text"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/button_size_content_card"
        android:layout_gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/share_view"
        android:visibility="gone"
        android:gravity="center">

        <com.fellopages.mobileapp.classes.common.ui.ActionIconThemedTextView
            android:id="@+id/share_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_share"
            android:drawableStart="@drawable/ic_share"
            android:gravity="center"
            android:layout_gravity="center"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingLeft="@dimen/element_spacing_normal"
            android:paddingStart="@dimen/element_spacing_normal"
            android:paddingRight="@dimen/element_spacing_normal"
            android:paddingEnd="@dimen/element_spacing_normal"
            android:drawablePadding="@dimen/element_spacing_normal"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="@string/share"
            android:textStyle="bold"
            app:iabActivatedColor="@color/themeButtonColor"
            app:iabColor="?android:textColorTertiary" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/button_size_content_card"
        android:visibility="gone"
        android:layout_gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/save_feed_view"
        android:gravity="center">

        <com.fellopages.mobileapp.classes.common.ui.ActionIconThemedTextView
            android:id="@+id/save_feed_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_check_box_24dp"
            android:drawableStart="@drawable/ic_check_box_24dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingLeft="@dimen/element_spacing_normal"
            android:paddingStart="@dimen/element_spacing_normal"
            android:paddingRight="@dimen/element_spacing_normal"
            android:paddingEnd="@dimen/element_spacing_normal"
            android:drawablePadding="@dimen/element_spacing_normal"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="@string/saved_feed"
            android:textStyle="bold"
            app:iabActivatedColor="@color/themeButtonColor"
            app:iabColor="?android:textColorTertiary" />
    </LinearLayout>
</merge>