<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_5dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/review_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/title_font_size"
        android:layout_marginTop="@dimen/margin_3dp"
        android:padding="@dimen/padding_8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <include layout="@layout/small_rating_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/product_rating" />

    <TextView
        android:id="@+id/review_owner"
        android:layout_below="@+id/review_title"
        android:textColor="@color/black"
        android:textSize="@dimen/body_default_font_size"
        android:padding="@dimen/padding_8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/review_date"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/review_owner"
        android:layout_alignParentEnd="true"
        android:layout_alignEnd="@+id/review_owner"
        android:layout_below="@+id/product_rating"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/body_default_font_size"
        android:padding="@dimen/padding_8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/review_description"
        android:layout_below="@+id/review_owner"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/body_default_font_size"
        android:padding="@dimen/padding_8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/review_pros"
        android:layout_below="@+id/review_description"
        android:text="@string/no_member_join_this_occurence_text"
        android:textSize="@dimen/body_default_font_size"
        android:textColor="@color/dark_gray"
        android:paddingTop="@dimen/padding_10dp"
        android:paddingLeft="@dimen/padding_8dp"
        android:paddingRight="@dimen/padding_8dp"
        android:paddingBottom="@dimen/padding_5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/review_cons"
        android:layout_below="@+id/review_pros"
        android:text="@string/no_member_join_this_occurence_text"
        android:textSize="@dimen/body_default_font_size"
        android:textColor="@color/dark_gray"
        android:paddingTop="@dimen/padding_5dp"
        android:paddingLeft="@dimen/padding_8dp"
        android:paddingRight="@dimen/padding_8dp"
        android:paddingBottom="@dimen/padding_5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/review_recomn"
        android:layout_below="@+id/review_cons"
        android:text="@string/no_member_join_this_occurence_text"
        android:textSize="@dimen/body_default_font_size"
        android:textColor="@color/dark_gray"
        android:paddingTop="@dimen/padding_5dp"
        android:paddingLeft="@dimen/padding_8dp"
        android:paddingRight="@dimen/padding_8dp"
        android:paddingBottom="@dimen/padding_8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/review_recomn"
        android:padding="@dimen/padding_8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/like_count"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/body_default_font_size"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/like_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="@dimen/padding_8dp"
            android:paddingEnd="@dimen/padding_8dp"
            android:src="@drawable/ic_thumb_up_white_18dp"/>

        <TextView
            android:id="@+id/comment_count"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/body_default_font_size"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/comment_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="@dimen/padding_8dp"
            android:paddingEnd="@dimen/padding_8dp"
            android:src="@drawable/ic_chat_bubble_white_18dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/review_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_6dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/review_recomn"
        android:src="@drawable/ic_item_overflow"/>

</RelativeLayout>