<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_tab_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_icon_tab_height"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:background="@drawable/tab_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tint="@color/grey_light"
            android:src="@drawable/ic_access_time_black_24dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/abc_item_background_holo_dark"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/friend_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tint="@color/grey_light"
            android:layout_gravity="center"
            android:src="@drawable/ic_assignment_ind_black_24dp"
            android:background="@drawable/abc_item_background_holo_dark"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/msg_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_people_white_24dp"
            android:tint="@color/grey_light"
            android:background="@drawable/abc_item_background_holo_dark"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/notification_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tint="@color/grey_light"
            android:layout_gravity="center"
            android:src="@drawable/ic_settings_24dp"
            android:background="@drawable/abc_item_background_holo_dark"/>
    </RelativeLayout>

</LinearLayout>